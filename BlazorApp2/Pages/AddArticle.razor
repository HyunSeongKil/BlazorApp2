    static IList<DetailCode> GetDummyCategoryCodes()
    {
        IList<DetailCode> list = new List<DetailCode>();

        string id = "C_01,C_02,C_03";
        string nm = "음악,미술,체육";

        string[] ids = id.Split(",");
        string[] nms = nm.Split(",");
        for (int i = 0; i < ids.Length; i++)
        {
            list.Add(new DetailCode()
            {
                GroupCodeId = "GC_CATEGORY",
                DetailCodeId = ids[i],
                DetailCodeNm = nms[i]
            });
        }

        //
        return list;
    }


